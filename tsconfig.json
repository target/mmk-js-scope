{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "dist",
    "declaration": true,
    "allowJs": true,
    "noUnusedLocals": true,
    "rootDir": "src",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop":true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true ,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "rootDir": "."
    },
    "transpileOnly": true
  },
  "files":["src/globals.d.ts", "src/hooks.js"],
  "include":["src/**/*", "config/**/*"],
  "exclude": ["src/**/*.test.ts"]
}
